@model IEnumerable<MyTecBits_MVC5_Bootstrap3.Models.WorkflowCommand>

@{
    ViewBag.Title = "Polecenia Workflow";
}

<h2><i class="glyphicon glyphicon-comment" style="vertical-align:top"></i> Twoje polecenia (@Model.Count())</h2>
<hr />
<div class="panel-group" id="accordion">
@foreach (var command in Model)
{
<div class="panel panel-default">
    <div class="panel-heading">
       <div class="row">
         <div class="col-md-11">
             <div>
             <a data-toggle="collapse" data-parent="#accordion" href="@("#collapse" + command.Id)" class="btn btn-sm btn-primary"><i class="glyphicon glyphicon-collapse-down"></i> ROZWIŃ</a>
             <a href="#" class="btn btn-sm btn-default"><span class="glyphicon glyphicon-file"></span> @command.RelatedObjectName</a>
             </div>
             <h4>@command.CommandName</h4>
             <small> dodane @command.Date przez <i class="glyphicon glyphicon-user"></i> @command.Author</small>
            </div>
      </div>
    </div>   
    <div id="@("collapse" + command.Id)" class="panel-collapse collapse out">
      <div class="panel-body" style ="margin:0 auto;">
          <div id="myTabContent" class="tab-content">
              <div class="tab-pane fade active in" id="home">
                  <div class="row"> 
                      <div class="col-md-4">    
                      <div class="metro-tile" style="display:block;height:200px">
                          <a href="#" style="display:block;height:100%">
                              <h3>FAKTURA</h3>
                              <h1><span class="glyphicon glyphicon-file"></span></h1>
                              <p>@command.RelatedObjectName</p></a></div>
                      </div>
                      <div class="col-md-8">
                                  <div class="row">   
        <div class="col-md-3 col-xs-4">
@*            <a href="#" class="btn btn-sm btn-default"> Więcej szczegółów<i class="glyphicon glyphicon-chevron-right"></i></a>*@
</div>
        <div class="col-md-9 col-xs-8" style="text-align:right;">
                       <a data-toggle="collapse" data-parent="#accordion" href="@("#collapse" + command.Id)" class="btn btn-sm btn-danger"><i class="glyphicon glyphicon-remove"></i></a>
        </div>
       </div>
                          <div class="row"> <h4><i class="glyphicon glyphicon-info-sign"></i>  Szczegóły obiektu:</h4>@Html.Action("Details", "Workflow", new { id = command.RelatedObjectId }) </div>
                         </div>
                  </div>
                  <hr />
              </div>
            </div>
         <div class="btn-group btn-group-justified">
                <a href="#" class="btn btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Odrzuć</a>
                <a href="#" class="btn btn btn-info">Do poprawy</a>
                <a href="#" class="btn btn btn-success">Akceptuj <span class="glyphicon glyphicon-ok"></span></a>
         </div>
      </div>
    </div> 
</div>    
} 
</div>
